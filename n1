package minigame;

class CountDownThread extends Thread{
	public static boolean check = false;
	public boolean stop = false;

	@Override
	public void run() {
		check = false;
		stop = false;
		for(int i=15; i>=0; i--) {
			if(Level1CCGame.check) {
				break;
			}
			if(Level2CCGame.check) {
				break;
			}
			if(Level3CCGame.check) {
				break;
			}

			
			try {
			System.out.println("\t\t"+ i);
			Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		stop = true;


	}
}
